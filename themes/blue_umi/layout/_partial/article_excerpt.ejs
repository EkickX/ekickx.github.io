<a class="column is-one-third is-card" href="<%- url_for(item.path) %>">
	<div class="card">
		<div class="card-image">
			<figure class="image">
			<%  if(item.header_img == "header.png") { %>
				<img src="<%- url_for(item.path+item.header_img) %>" alt="">
			<% } else { %>
				<img src="/img/header.png" alt="">
			<!-- <% } %> -->
			</figure>
		</div>
		<div class="card-content">
			<p class="subtitle is-size-6" style="padding-bottom: 5px; color: #999; margin-bottom: 0"><%= item.date.format(config.date_format) %></p>
			<h1 class="subtitle is-size-5"><%- item.title %></h1>
		</div>
	</div>
</a>